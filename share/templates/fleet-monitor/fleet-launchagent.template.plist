<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.devteam.fleet-monitor</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{NODE_PATH}}</string>
        <string>{{FLEET_SERVER_PATH}}/server.js</string>
    </array>

    <key>WorkingDirectory</key>
    <string>{{FLEET_SERVER_PATH}}</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>StandardOutPath</key>
    <string>{{LOG_DIR}}/fleet-monitor.log</string>

    <key>StandardErrorPath</key>
    <string>{{LOG_DIR}}/fleet-monitor.error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:{{HOMEBREW_PREFIX}}/bin</string>
        <key>HOME</key>
        <string>{{HOME_DIR}}</string>
        <key>PORT</key>
        <string>{{FLEET_PORT}}</string>
    </dict>

    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
